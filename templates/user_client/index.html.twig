{% block title %}Liste des clients{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <div class="row">
        {% for user_client in user_clients %}
        <div class="col-md-4">
            <div class="card elevation-1">
                <div class="card-body">
                    <div class="card-comment">
                        <h6 class="card-title">Lorem ipsum dolor.</h6>
                        <hr>
                        <table class="">
                            <tr>
                                <th>Email</th>
                                <td>anselme@gmail.com</td>
                            </tr>
                            <tr>
                                <th>Pays</th>
                                <td>Pays-bas</td>
                            </tr>
                            <tr>
                                <th>Devise</th>
                                <td>Eur</td>
                            </tr>
                            <tr>
                                <th>Montant initial</th>
                                <td>12 555</td>
                            </tr>
                            <tr>
                                <th>Montant restant</th>
                                <td>14 111</td>
                            </tr>
                            <tr>
                                <th></th>
                                <td>14 111</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div class="">No records found</div>
        {% endfor %}
    </div>

    <table class="table table-striped table-hover table-sm table-responsive-sm">
        <thead class="">
            <tr>
                <th>Nom complet</th>
                <th>Pays</th>
                <th>Email</th>
                <th>Device</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_client in user_clients %}
            <tr>
                <td>{{ user_client.nom }} {{ user_client.prenom }}</td>
                <td>{{ user_client.pays }}</td>
                <td>{{ user_client.email }}</td>
                <td>{{ user_client.device }}</td>
                <td>
                    <a class="btn btn-small btn-primary" href="{{ path('user_client_show', {'id': user_client.id}) }}">show</a>
                    <a class="btn btn-small btn-dark" href="{{ path('user_client_edit', {'id': user_client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('logout') }}">Se deconnecter</a>
{% endblock %}
